pipeline {
    agent any

    environment {
        IMAGE_NAME = 'react-frontend'
        CONTAINER_NAME = 'react_frontend'
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì¶ Clonage du d√©p√¥t...'
                checkout scm
            }
        }

        stage('Install dependencies') {
  steps {
    bat 'npm config set proxy http://proxy.example.com:8080'
    bat 'npm install'
  }
}

        stage('Build React app') {
            steps {
                echo 'üõ†Ô∏è Construction de l‚Äôapplication React...'
                bat 'npm run build'
            }
        }

        stage('Build Docker image') {
  steps {
    dir('frontend') {
      bat "docker build -t ${IMAGE_NAME} ."
    }
  }
}
        stage('Stop and remove old container') {
            steps {
                echo 'üßπ Nettoyage de l‚Äôancien conteneur...'
                bat """
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                """
            }
        }

        stage('Run Docker container') {
            steps {
                echo 'üöÄ Lancement du nouveau conteneur...'
                bat "docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}"
            }
        }
    }

    post {
        success {
            echo '‚úÖ D√©ploiement r√©ussi !'
        }
        failure {
            echo '‚ùå √âchec du pipeline.'
        }
    }
}
