pipeline {
    agent {
        label 'windows' // Agent Windows obligatoire
    }

    environment {
        IMAGE_NAME = 'react-frontend'
        CONTAINER_NAME = 'react_frontend'
    }

    stages {
        stage('Checkout') {
            steps {
                echo '📦 Clonage du dépôt...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo '📦 Installation des dépendances...'
                bat 'npm install' // Commande Windows
            }
        }

        stage('Build React app') {
            steps {
                echo '🛠️ Construction de l’application React...'
                bat 'npm run build'
            }
        }

        stage('Build Docker image') {
            steps {
                echo '🐳 Construction de l’image Docker...'
                dir('frontend') {
                    bat "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Stop and remove old container') {
            steps {
                echo '🧹 Nettoyage de l’ancien conteneur...'
                bat """
                    docker stop ${CONTAINER_NAME} || echo OK
                    docker rm ${CONTAINER_NAME} || echo OK
                """
            }
        }

        stage('Run Docker container') {
            steps {
                echo '🚀 Lancement du nouveau conteneur...'
                dir('frontend') {
                    bat "docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo '✅ Déploiement réussi !'
        }
        failure {
            echo '❌ Échec du pipeline.'
        }
    }
}