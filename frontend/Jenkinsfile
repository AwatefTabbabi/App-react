pipeline {
    agent any

    environment {
        IMAGE_NAME = 'react-frontend'
        CONTAINER_NAME = 'react_frontend'
        DOCKER_COMPOSE_FILE = 'docker-compose.yml'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Clonage du dÃ©pÃ´t...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'ğŸ“¦ Installation des dÃ©pendances...'
                sh 'npm install'
            }
        }

        stage('Build React app') {
            steps {
                echo 'ğŸ› ï¸ Construction de lâ€™application React...'
                sh 'npm run build'
            }
        }

        stage('Build Docker image') {
            steps {
                echo 'ğŸ³ Construction de lâ€™image Docker...'
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Stop and remove old container') {
            steps {
                echo 'ğŸ§¹ Nettoyage de lâ€™ancien conteneur...'
                sh """
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                """
            }
        }

        stage('Run Docker container') {
            steps {
                echo 'ğŸš€ Lancement du nouveau conteneur...'
                sh "docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}"
            }
        }
    }

    post {
        success {
            echo 'âœ… DÃ©ploiement rÃ©ussi !'
        }
        failure {
            echo 'âŒ Ã‰chec du pipeline.'
        }
    }
}
