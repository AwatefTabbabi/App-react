pipeline {
    agent {
        label 'windows' // Agent Windows obligatoire
    }

    environment {
        IMAGE_NAME = 'react-frontend'
        CONTAINER_NAME = 'react_frontend'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Clonage du dÃ©pÃ´t...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'ğŸ“¦ Installation des dÃ©pendances...'
                bat 'npm install' // Commande Windows
            }
        }

        stage('Build React app') {
            steps {
                echo 'ğŸ› ï¸ Construction de lâ€™application React...'
                bat 'npm run build'
            }
        }

        stage('Build Docker image') {
            steps {
                echo 'ğŸ³ Construction de lâ€™image Docker...'
                dir('frontend') {
                    bat "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Stop and remove old container') {
            steps {
                echo 'ğŸ§¹ Nettoyage de lâ€™ancien conteneur...'
                bat """
                    docker stop ${CONTAINER_NAME} || echo OK
                    docker rm ${CONTAINER_NAME} || echo OK
                """
            }
        }

        stage('Run Docker container') {
            steps {
                echo 'ğŸš€ Lancement du nouveau conteneur...'
                dir('frontend') {
                    bat "docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… DÃ©ploiement rÃ©ussi !'
        }
        failure {
            echo 'âŒ Ã‰chec du pipeline.'
        }
    }
}