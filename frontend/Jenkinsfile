pipeline {
    agent any

    environment {
        IMAGE_NAME = 'react-frontend'
        CONTAINER_NAME = 'react_frontend'
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì¶ Clonage du d√©p√¥t...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                dir('frontend') { // ‚úÖ Navigue vers le dossier frontend
                    bat 'npm install' 
                }
            }
        }

        stage('Build React app') {
            steps {
                dir('frontend') { // ‚úÖ Navigue vers le dossier frontend
                    bat 'npm run build'
                }
            }
        }

        stage('Build Docker image') {
            steps {
                dir('frontend') {
                    bat "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Stop and remove old container') {
            steps {
                bat """
                    docker stop ${CONTAINER_NAME} || echo OK
                    docker rm ${CONTAINER_NAME} || echo OK
                """
            }
        }

        stage('Run Docker container') {
            steps {
                dir('frontend') { // ‚úÖ Si n√©cessaire selon la config Docker
                    bat "docker run -d --name ${CONTAINER_NAME} -p 3000:3000 ${IMAGE_NAME}"
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ D√©ploiement r√©ussi !'
        }
        failure {
            echo '‚ùå √âchec du pipeline.'
        }
    }
}